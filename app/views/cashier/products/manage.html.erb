<div class="container">
 
  <%= render :partial => "shared/tabs2", :locals => { :selected_item => '商品管理' } %>

  <table class="table">
    <tbody >
      <tr>
        <th>分類</th>
        <th>中文名稱</th>
        <th>英文名稱</th>
        <th>規格</th>
        <th>價錢</th>
        <th>國際通用碼</th>
        <th>數量</th>
        <th>功能</th>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.category %></td>
          <td>
            <%= link_to  edit_cashier_product_path(product) do %>
            <%= product.zh_name %>
            <% end %>
          </td>
          <td><%= product.en_name %></td>
          <td><%= product.capacity %></td>
          <td><%= product.price %></td>
          <td><%= product.upc %></td>
          <td><%= product.quantity %></td>
          <td><%= link_to "編輯數量", edit_cashier_product_path(product) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
    
</div>
