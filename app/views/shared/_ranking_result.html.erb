<div style="text-align: center">
  <%= link_to '當月排行' , ranking_month_cashier_orders_path %> >
  <%= link_to '當週排行' , ranking_week_cashier_orders_path %> >
  <%= link_to '當日排行' , ranking_cashier_orders_path %> >
  <%= link_to '門市人員排行' , ranking_user_cashier_orders_path %>
</div>

 <table class="table">
    <tbody>
      <tr>
        <th>分類</th>
        <th>中文名稱</th>
        <th>國際通用碼</th>
        <th>規格</th>
        <th>數量</th>
      </tr>
    </tbody>  
    <tbody>
      <% i = 0 %>
      <% @all.each do |item| %> 
      <tr>
        <td><%= item.product.category %></td>
        <td><%= item.product.zh_name %>
        <% if i == 0 %>
        <i class = "glyphicon glyphicon-fire" aria-hidden="true" style="color:red"></i>
        <% end %></td>
        <td><%= item.product.upc %></td>
        <td><%= item.product.capacity %></td>
        <td><%= @product_quantity[i]  %></td>
      </tr>
      <% i += 1 %>
      <% end %>
    </tbody>
  </table>  