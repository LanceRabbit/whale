<div class="container">
 
  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#">所有商品</a></li>
    <li role="presentation" class="active"><%= link_to "更新商品", new_cashier_product_path%></li>
  </ul>

  <table class="table">
    <tbody >
      <tr>
        <th>分類</th>
        <th>中文名稱</th>
        <th>英文名稱</th>
        <th>規格</th>
        <th>價錢</th>
        <th>國際通用碼</th>
        <th>適用對像</th>
        <th>使用方法</th>
        <!--
        <th>中文主成份</th>
        <th>中文全成份</th>
        <th>英文全成份</th>
        -->
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.category %></td>
          <td>
            <%= link_to  edit_cashier_product_path(product) do %>
            <%= product.zh_name %>
            <% end %>
          </td>
          <td><%= product.en_name %></td>
          <td><%= product.capacity %></td>
          <td><%= product.price %></td>
          <td><%= product.upc %></td>
          <td><%= product.use_for %></td>
          <td><%= product.directions %></td>
          <!--
          <td><%= product.zh_m_ingredients %></td>
          <td><%= product.zh_ingredients %></td>
          <td><%= product.en_ingredients %></td>
          -->
        </tr>
      <% end %>
    </tbody>
  </table>  
    
</div>
