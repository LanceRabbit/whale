<div class="container">
 
  <%= render :partial => "shared/tabs2", :locals => { :selected_item => '數量管理' } %>

  <table class="table">
    <tbody >
      <tr>
        <th>分類</th>
        <th>中文名稱</th>
        <th>英文名稱</th>
        <th>規格</th>
        <th>價錢</th>
        <th>國際通用碼</th>
        <th>數量</th>
        <th>增減數量</th>
      </tr>
      <form  accept-charset="UTF-8" action="/cashier/products/update_all" method="post" >
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.category %></td>
          <td>
            <%= link_to  edit_cashier_product_path(product) do %>
            <%= product.zh_name %>
            <% end %>
          </td>
          <td><%= product.en_name %></td>
          <td><%= product.capacity %></td>
          <td><%= product.price %></td>
          <td><%= product.upc %></td>
          <td><%= product.quantity %></td>
          <td><input type="number" name="products[<%=product.id%>][quantity]" min="-100" max="100" value="0" class="alnright"></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
  <input type="submit" class="btn btn-primary pull-right">批次修改數量</button>  
  </form>
</div>
