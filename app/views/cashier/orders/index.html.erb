<div class="container">
 
  <%= render :partial => "shared/tabs1", :locals => { :selected_item => '訂單資訊' } %>
      
  <br>
  <h2>訂單資訊</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>編號</th>
        <th>結帳人員</th>
        <th>顧客編號</th>
        <th>付款方式</th>
        <th>總金額</th>
        <th>功能</th>
      </tr>
      <% @orders.each do |order|%>
      <tr>
        <td><%= order.id%></td>
        <td><%= order.user.name%></td>
        <td>
          <% if order.member_id == -1%>
            非會員
          <% else%>
            <%= order.member_id%>
          <% end%>
        </td>
        <td><%= order.payment_method%></td>
        <td><%= order.amount%></td>
        <td><%= link_to "編輯",edit_cashier_order_path(order.id)%></td>
      </tr>
      
      <% end %>
    </tbody>
  </table>
</div>