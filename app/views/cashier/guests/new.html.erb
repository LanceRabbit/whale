<h2>新增客情</h2>
<%= form_for [:cashier, @guest] do |f| %>
  <div class="form-group">

    <%= f.label :payment, "購買金額" %>
    <%= f.text_field :payment , class: "form-control"%>
    <br>

    <%= f.label :gender, "性別" %>
    <%= f.radio_button :gender ,"male"%>
    <%= f.label :gender, "男" %>
    <%= f.radio_button :gender ,"female"%>
    <%= f.label :gender, "女" %>
    <br>

    <%= f.label :guest_type, "客戶類型" %>
    <%= f.text_field :guest_type , class: "form-control"%>
    <br>

    <%= f.label :country_id, "國籍" %>
    <%= f.collection_select :country_id, Country.all, :id, :nat, {prompt: true}, {class: "form-control"} %>
    <br>

    <%= f.label :gender, "年齡結構" %>
    <%= f.text_field :gender , class: "form-control"%>
    <br>

    <%= f.label :info_way_id, "如何得知茶籽堂？" %>
    <%= f.collection_select :info_way_id, InfoWay.all, :id, :news_channel, {prompt: true}, {class: "form-control"} %>
    <br>

    <%= f.submit "新增紀錄",class: "btn btn-primary" %>

  </div>
<% end %>