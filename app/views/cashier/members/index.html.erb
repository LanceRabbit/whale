<div class="container">
 
  <%= render :partial => "shared/tabs1", :locals => { :selected_item => '會員資料(測試用，暫時)' } %>
  
  <table class="table" data-toggle="table">
    <thead>
      <tr>
        <th>姓名</th>
        <th>手機號碼</th>
        <th data-sortable="true" data-field="gender">性別</th>
        <th>信箱</th>
        <th data-sortable="true" data-field="birthday">生日</th>
        <th>#</th>
        <th>#</th>
      </tr>
    </thead>
    <tbody id="origin-list" >          
      <% @members.each do |member| %>
         
        <tr>         
          <td><%= member.name%></td>
          <td><%= member.phone%></td>
          <td><%= member.gender%></td>
          <td><%= member.email%></td>
          <td><%= member.birthday%>
          <% if member.birthday.month == Date.current.month %>
            <i class="fa fa-birthday-cake" aria-hidden="true" style="color:#FF9900"></i>
          <% end %></td>
          <td><button><%= link_to "成立訂單", new_cashier_order_path(id: member)%></button></td>
          <td><button><%= link_to "詳細資料", cashier_member_path(id: member.id)  %></button></td>
        </tr>
      
      <% end %>
    </tbody>
  </table>  
    
</div>


