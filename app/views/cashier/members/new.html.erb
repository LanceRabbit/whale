<div class="container">

  <ul class="nav nav-tabs">
    <li role="presentation" ><%= link_to "客情資料", guest_today_cashier_guests_path %></li> 
    <li role="presentation" ><%= link_to "成立訂單", new_cashier_order_path(id: -1) %></li>
    <li role="presentation" ><%= link_to "搜尋會員", search_cashier_members_path %></li>
    <li role="presentation" class="active"><a href="#">新增會員</a></li>
    <li role="presentation" ><%= link_to "會員資料(測試用，暫時)", cashier_members_path %></li>
  </ul>
  
  <br>
  <h4>新增會員</h4>
  <%= form_for [:cashier, @member] do |f|%>
    <div class="form-group">
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name , class: "form-control"%>
      <br>

      <%= f.label :gender, "性別" %>
      <%= f.radio_button :gender ,"male"%>
      <%= f.label :gender, "男" %>
      <%= f.radio_button :gender ,"female"%>
      <%= f.label :gender, "女" %>
      <br>

      <%= f.label :birthday, "生日" %>
      <%= f.text_field :birthday , class: "form-control"%>
      <br>

      <%= f.label :phone, "手機號碼" %>
      <%= f.text_field :phone , class: "form-control"%>
      <br>
      
      <%= f.label :email, "電子信箱" %>
      <%= f.email_field :email , class: "form-control"%>
      <br>

      <%= f.label :hair_id, "髮質" %>
      <%= f.collection_select :hair_code, HairType.all, :code, :value, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.label :skin_id, "膚質" %>
      <%= f.collection_select :skin_type_id, SkinType.all, :id, :skin_type, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.label :remark, "備註" %>
      <%= f.text_area :remark, class: "form-control" %>
      <br>

      <%= f.label :avatar, "個人照片" %>
      <%= f.file_field :avatar %>
      <br>
      
      
      <%= f.submit "確定新增會員",class: "btn btn-primary" %>
    </div>
  <% end %>           
</div>
