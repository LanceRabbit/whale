<div class="container">

  <%= render :partial => "shared/tabs_setting", :locals => { :selected_item => '商品折扣設定' } %>
  <br>
 
  <div class="form-inline" >
    <%= form_for [:cashier, @discount_method] do |f| %>
      <div class="form-group">
        <%= f.text_field :content, placeholder: "請輸入商品折扣", class: "form-control" %>
      </div>
      <%= f.submit "新增", class: "btn btn-primary" %>
      
      <% if @discount_method.errors.any? %>
        <%= @discount_method.errors.full_messages.to_sentence %>
      <% end %>
      
    <% end %>
  </div> 
 
  <br>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="alncenter auto-no">編號</th>
        <th class="alncenter">內容</th>
        <th>狀態</th>
        <th class="alncenter">功能</th>
      </tr>
    </thead>
    <tbody>
    <% i = 1 %>
    <% @discount_methods.each do |discount_method| %>       
      <tr>
        <th scope="row" class="alncenter"><%= i %></th>
        <td class="alnleft"><%= discount_method.content %></td>
        <td>
        <% if discount_method.is_active %><span class="label label-success">啓用中</span><% end %>
        <% if !discount_method.is_active %><span class="label label-danger">停用中</span><% end %>
        </td>
        <td>
          <%= link_to '編輯', cashier_discount_method_path(id: discount_method.id) %> ｜
          <%= link_to '刪除', cashier_discount_method_path(discount_method), method: :delete, data: {confirm:"確定刪除?"} %>
        </td>
      </tr>
      <% i = i + 1 %>
    <% end %>
    </tbody>
  </table>  
</div>
