<div class="container">
  
  <ul class="nav nav-tabs">
    <li role="presentation" ><%= link_to "客情資料", guest_today_cashier_guests_path%></li>
    <li role="presentation" ><%= link_to "成立訂單",new_cashier_order_path(id: -1)%></li>
    <li role="presentation" class="active" ><%= link_to "最新消息",cashier_bulletins_path%></li>
    <li role="presentation" ><%= link_to "搜尋會員",search_cashier_members_path%></li>
    <li role="presentation" ><%= link_to "新增會員",new_cashier_member_path%></li>
    <li role="presentation" ><%= link_to "會員資料(測試用，暫時)",cashier_members_path%></li>
  </ul>

  <br />
  
  <%= link_to "新增最新消息" , new_cashier_bulletin_path , class: "btn btn-primary center-block" %>
    
  <br />
  
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>時間</th>
          <th>標題</th>
          <th>內容</th>
          <th>發布者</th>
          <th>功能</th>
        </tr>
      </thead>
      <tbody>
        <% @bulletins.each do |bulletin| %>
          <tr>
            <td><%= bulletin.created_at.localtime.to_s(:db)[0..9] %></td>
            <td>
              <%= link_to cashier_bulletin_path(bulletin) do %><%= bulletin.title %><% end %>
            </td>
            <td><%= bulletin.content %></td>
            <td><%= bulletin.user.name %></td>
            <td><%= link_to "編輯", edit_cashier_bulletin_path(bulletin)%>  <%= link_to '刪除', cashier_bulletin_path(bulletin), method: :delete, data: {confirm:"是否確認刪除?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
 </div>

</div>