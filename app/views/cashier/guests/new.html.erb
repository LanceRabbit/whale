<div class="container">
<h2>客情資料</h2>
  <ul class="nav nav-tabs">
    <li role="presentation" ><%= link_to "後台首頁",cashier_root_path%></li>
    <li role="presentation" ><%= link_to "新增會員",new_cashier_member_path%></li>
    <li role="presentation" ><%= link_to "成立訂單",checkout_cashier_members_path%></li>
    <li role="presentation" ><%= link_to "搜尋會員",search_cashier_members_path%></li>
    <li role="presentation" class="active"><a href="#">客情資料</a></li>
  </ul>
  
  <br>
  <h4>新增客情</h4>
  <%= form_for [:cashier, @guest] do |f| %>
    <div class="form-group">

      <%= f.label :payment, "購買金額" %>
      <%= f.text_field :payment , class: "form-control"%>
      <br>

      <%= f.label :gender, "性別" %>
      <%= f.radio_button :gender ,"男"%>
      <%= f.label :gender, "男" %>
      <%= f.radio_button :gender ,"女"%>
      <%= f.label :gender, "女" %>
      <br>

      <%= f.label :guest_type_id, "客戶類型" %>
      <%= f.collection_select :guest_type_id, GuestType.all, :id, :guest_type, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.label :country_id, "國籍" %>
      <%= f.collection_select :country_id, Country.all, :id, :country_type, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.label :age_id, "年齡結構" %>
      <%= f.collection_select :age_id, Age.all, :id, :age_type, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.label :info_way_id, "如何得知茶籽堂？" %>
      <%= f.collection_select :info_way_id, InfoWay.all, :id, :news_channel, {prompt: true}, {class: "form-control"} %>
      <br>

      <%= f.submit "新增紀錄",class: "btn btn-primary" %>

    </div>
  <% end %>
</div>