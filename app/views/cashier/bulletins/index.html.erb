<div class="container">

  <%= render :partial => "shared/tabs1", :locals => { :selected_item => '最新消息' } %>
  
  <br />
  
  <%= link_to "新增最新消息" , new_cashier_bulletin_path , class: "btn btn-primary center-block" %>
    
  <br />
  
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>時間</th>
          <th>標題</th>
          <th>內容</th>
          <th>發布者</th>
          <th>功能</th>
        </tr>
      </thead>
      <tbody>
        <% @bulletins.each do |bulletin| %>
          <tr>
            <td><%= bulletin.created_at.localtime.to_s(:db)[0..9] %></td>
            <td>
              <%= link_to cashier_bulletin_path(bulletin) do %><%= bulletin.title %><% end %>
            </td>
            <td><%= bulletin.content %></td>
            <td><%= bulletin.user.name %></td>
            <td><%= link_to "編輯", edit_cashier_bulletin_path(bulletin)%>  <%= link_to '刪除', cashier_bulletin_path(bulletin), method: :delete, data: {confirm:"是否確認刪除?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
 </div>

</div>