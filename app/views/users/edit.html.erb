<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <h3>更變顯示名稱</h3>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "變更", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>

  </div>
</div>